{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES2022",
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "newLine": "lf"
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "./__tests__/**/*.ts"
  ]
}
